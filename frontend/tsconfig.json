{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["react", "react-native", "expo", "nativewind/types"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "types/**/*.d.ts",
    "src/redux/features/auth/authThunk.js"
  ],
  "exclude": [
    "node_modules",
    "../firebase_admin",
    "../admin",
    "../firebase" // Exclude shared backend firebase folder
  ],
  "extends": "expo/tsconfig.base"
}
